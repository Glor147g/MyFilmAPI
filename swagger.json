{
	"swagger": "2.0",
	"info": {
	  "version": "1.0.0", 
	  "title": "My Film service ",
	  "description": "My Film  API",
	  "license": {
		"name": "MIT",
		"url": "https://opensource.org/licenses/MIT"
	  }
	},
	"host": "localhost:3000",
	"basePath": "/",
	"tags": [
	  {
		"name": "Films",
		"description": "API for Films who like Will Smith Movies"
	  }
	],
	"schemes": ["http"],
	"consumes": ["application/json"],
	"produces": ["application/json"],
	"paths": {
	  "/films": {
		"get": {
		  "tags": ["films"],
		  "summary": "Get all films in system",
		  "responses": {
			"200": {
			  "description": "OK",
			  "schema": {
				"$ref": "#/definitions/Films"
			  }
			}
		  }
		}
	  }
	},
	"definitions": {
	  "Film": {
		"required": ["name", "_id", "companies"],
		"properties": {
		  "_id": {
			"type": "integer",
			"uniqueItems": true
		  },
		  "isPublic": {
			"type": "boolean"
		  },
		  "name": {
			"type": "string"
		  },
		  "books": {
			"type": "array",
			"items": {
			  "type": "object",
			  "properties": {
				"name": {
				  "type": "string"
				},
				"amount": {
				  "type": "number"
				}
			  }
			}
		  },
		  "companies": {
			"type": "array",
			"items": {
			  "type": "string"
			}
		  }
		}
	  },
	  "Films": {
		"type": "array",
		"$ref": "#/definitions/Film"
	  }
	}
  }
  
 